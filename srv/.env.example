# ── Database (direct Postgres — used by migrations) ──────────────────────────
# Direct connection to the database. Find this in Supabase Dashboard >
# Project Settings > Database > Connection string > URI (select "Direct connection").
DATABASE_URL="postgresql://postgres.[your-project-ref]:[YOUR-PASSWORD]@aws-0-[region].pooler.supabase.com:5432/postgres"

# ── Application ────────────────────────────────────────────────────────────────
APP_CORS_ORIGINS=http://localhost:3003
APP_SUPABASE_URL=https://your-project.supabase.co
# Service role key (NOT the anon/publishable key). Bypasses RLS.
# Find this in Supabase Dashboard > Project Settings > API > service_role (secret).
APP_SUPABASE_SERVICE_KEY=your-supabase-service-role-key
APP_OPENAI_API_KEY=sk-your-openai-key
APP_LLM_MODEL=gpt-4o

# ── Supabase JWT verification (optional — only needed for HS256 projects) ────
# SUPABASE_JWT_SECRET=your-supabase-jwt-secret
# Newer Supabase projects use ES256; JWT verification uses the JWKS endpoint
# automatically when this is not set.

# ── Agent settings ─────────────────────────────────────────────────────────────
AGENT_AVATAR_MODEL=gpt-4o
AGENT_SUPERVISOR_MODEL=gpt-4o
AGENT_GAP_MODEL=gpt-4o

# ── Tool settings ──────────────────────────────────────────────────────────────
TOOL_RETRIEVAL_QDRANT_URL=https://your-cluster.qdrant.io
TOOL_RETRIEVAL_QDRANT_API_KEY=your-qdrant-key
TOOL_RETRIEVAL_COLLECTION_NAME=lrwr_chunks
TOOL_RETRIEVAL_TOP_K=10
TOOL_RETRIEVAL_COHERE_API_KEY=your-cohere-key

TOOL_TAVILY_API_KEY=your-tavily-key
